{
    "name": "express-static-website",
    "version": 2,
    "public": true,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      },
      
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ],
    "routes": [
      {
        "src": "/((?!.*\\.\\w+$).*)",
        "dest": "/app.js"
      },
      {
        "src": "/(.+\\.[a-z]+)$",
        "dest": "/$1"
      }
    ]
  }